<div class="row">
    <div class="col-sm-12">
        <div class="cover-container">
            <!-- START PANEL -->
            <div class="cover-item" style="background-image: url('{{this.photo1}}')"></div>
            <div class="cover-item" style="background-image: url('{{this.photo2}}')"></div>
            <div class="cover-item" style="background-image: url('{{this.photo3}}')"></div>
            <div class="cover-item" style="background-image: url('{{this.photo4}}')"></div>
            <div class="cover-item" style="background-image: url('{{this.photo5}}')"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-8 pad-top pl-5">
        <div class="row">
            <div class="col-sm-4 text-center">
                <a href="/questionnaire">
                    <button class="btn btn-yellow" type="submit" name="button">All Set? Request Bids</button>
                </a>
                <button class="btn btn-primary" type="submit" name="button">Tag An Event Below</button>

                <div class="contactSide text-left">
                    <h6>Your Events</h6>
                    {{#each events}}
                        <span class="fa fa-heart" aria-hidden="true">
                            <a href="/addVenue?/eventId={{this._id}}&venueId={{../this.placeId}}&name={{../this.name}}&dom={{../this.website}}">{{this.name}}</a>
                        </span> </br>
                        {{#if events.vEvent}}
                        {{#each events.vEvent}}
                            <p>{{this.name}}</p>
                        {{/each}}
                    {{/each}}
                </div>
            </div>
            <div class="col-sm-8">
                <h2 class="section-heading text-blue text-left">{{this.name}}</h2>
                <h3 class="section-subheading text-muted">{{this.company.twitter.bio}}</h2>
                <div class="row">
                    <div class="col-sm-2">
                        <span class="fa fa-star" aria-hidden="true"><p class="inline">{{this.rating}}/5.0 Rating</p></span>
                    </div>
                    <div class="col-sm-5">
                        <span class="fa fa-link" aria-hidden="true">
                        <p class="inline"><a href="{{this.website}}">{{this.website}} </a></p></span>
                    </div>
                    <div class="col-sm-5">
                        <span class="fa fa-phone" aria-hidden="true"><p class="inline"> {{this.phone}} </p></span>
                    </div>
                </div>
                <p class="pad-top">{{this.company.description}} </p>
            </div>
        </div>
    </div>

    <div class="col-sm-4 pad-top section-primary">
                <div id="venueMap" class="sidebar"></div>
                <p class="text-white text-center"><b>{{this.address}}</b></p>
    </div>
</div>
<div class="row ">
        <div class="col-sm-8 sidebar pad-top">

        </div>
        <div class="col-sm-4 pad-top venueSide section-light">
            <h6 class="text-blue">Hours: <span class="fa fa-clock-o" aria-hidden="true"></span></h6>
            <div style="padding: 5px; border-radius: 3px">
                {{#each this.hours}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
</div>

<script>
function initMap() {
    var uluru = {lat: {{this.lat}}, lng: {{this.lng}} };
    var map = new google.maps.Map(document.getElementById('venueMap'), {
        zoom: 12,
        center: uluru
    });
    var marker = new google.maps.Marker({
        position: uluru,
        map: map
    });
}
</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC7j6tBWnmcFm_nZOpXhX4rQSEGUAtxMC0&callback=initMap">
</script>

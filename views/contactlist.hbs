<div class="parallax-container valign-wrapper">
  <div class="container">
    <br><br>
    <center>
        <!-- find out how to pass the event id here, and then use that to find the venues related to that event and loop through the domains -->
      <form id="form" method="post" action="/contactlist">
        <div class="divBox">
          <select name="eventId" required>
            <option value="" disabled selected>Choose your event list</option>
            {{#each events}}
                <option value={{this._id}}>{{this.name}}</option>
            {{/each}}
        </select>
        <input type=hidden name='eventid' value={{this._id}} required>
        </div>
        <div class="divBox">
          <input type='text' name="guestCount" placeholder="Guest Count" class="row center" required>
        </div>
        <div class="divBox">
          <input type="date" name="date" id="dateBox" required>
        </div>
        <div class="divBox">
          <input type="text" name="starttime" placeholder="Start Time" id="dateBox" required>
        </div>
        <div class="divBox" id="hours">
          <input type='text' name="hours" placeholder="Number of Hours" class='row center' required>
        </div>

        <div class="divBox" id='price'>
          <select name="price" required>
                      <option id="choosePrice" value="" disabled selected>Choose Your Price Type</option>
                      <option>Open Bar</option>
                      <option>Minimum Spend</option>
            </select>
        </div>
        <div id="submitBtn" class="row center">
            <button class="btn waves-effect waves-light brown" type="submit">Submit
                    <i class="material-icons right">send</i>
            </button>
        </div>
      </form>
    </center>
  </div>
  <br><br>


  <div class="parallax"><img src="../images/rsz_second.jpg" alt="Unsplashed background img 2"></div>
</div>

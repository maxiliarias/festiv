<div class="row bg4 hero-image">
    <div class="col-sm-12 text-center hero-text ">
        <h3 class="text-white">Contact List Details</h3>
        <h5 class="text-white">Click, Click... Send!</h5>
    </div>
</div>
<div class="row pad-top mb-4 d-flex justify-content-around mx-auto">
    <!-- Screen to select an event -->
    {{#if events}}
        <div class="col-sm-2 m-2">
            <h2 class="section-heading text-yellow vertMid"> Select an Event
                <span class="fa fa-arrow-right" aria-hidden="true"></span>
            </h2>
        </div>
        <div class="col-sm-8">
        <div class="row">
            {{#each events}}
                <div class="col-sm-5 section-blue m-2 card noborder">
                    <a href="/contactlist?eventId={{this._id}}">
                        <h3 class="text-white text-center p-2">{{this.name}}</h3>
                    </a>
                </div>
            {{/each}}
        </div>
        </div>
    {{/if}}

    <!-- Screen for form -->
    <div class="col-sm-4 text-center">
    {{#if party}}
        <h3 class="text-blue text-center mb-4">{{party.name}}</h3>
      <form id="contactForm" class="form-group text-right mx-auto" method="post" action="/contactlist?eventId={{party._id}}">
          <div class="form-group row">
            <label class="col-2 col-form- text-left">Date</label>
            <div class="col-10">
              <input type="date" class="form-control" name="date" value="{{party.date}}" min={{min}} required>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label text-left">Start Time</label>
            <div class="col-10">
              <input type="text" class="form-control" name="starttime" value="{{party.time}}"  placeholder="Start Time"required>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label text-left">Hours</label>
            <div class="col-10">
              <input type='text' class="form-control" name="hours" value="{{party.hours}}"  placeholder="Number of Hours" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label text-left">Guests</label>
            <div class="col-10">
              <input type='text' class="form-control" name="guestCount" value="{{party.guestCount}}" placeholder="Guest Count" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-2 col-form-label text-left">Price Package</label>
            <div class="col-10">
                <select class="form-control" name="price" required>
                      <option value="{{party.price}}" disabled selected>{{party.price}}</option>
                      <option>Open Bar</option>
                      <option>Minimum Spend</option>
                </select>
            </div>
          </div>
        <button id="contactBtn" class="btn btn-primary mt-2" type="submit">Send Emails</button>
      </form>

      <!-- Confirmation Modal  -->
      <div class="modal " id="confirmModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title text-blue"><b>Confirmation</b></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body text-left">
                <p class="text-muted">Do all of the venues below look correct? You can make edits in your <a href="/events">my events</a> page. If ready, let's go!</p>
                <ul>
                    {{#each party.vEvent}}
                    <li class="text-blue">{{this.name}}</li>
                    {{/each}}
                </ul>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Make Changes</button>
              <button type="button" class="btn btn-primary" id="request-bids">Request Bids</button>
            </div>
          </div>
        </div>
      </div>


    {{/if}}
  </div>
</div>

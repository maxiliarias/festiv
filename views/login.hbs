{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> {{error}}
  </div>
{{/if}}
<div class="row height">
  <div class="col-sm-6 mx-auto p-4">
      <div class="col-sm-6 offset-3 text-center section-transparent p-3 text-muted mx-auto">
          <h2 class="section-heading">Hello Friend <span class="fa fa-hand-peace-o" aria-hidden="true"></span></h2>
              <h6> Please Login with Facebook</h6></br>
              <a class="btn btn-brightblue mt-3" href="/fb/login">Login with Facebook</a>
          </div>
      </div>
      <form class="form text-center vertMid" method="post" action="/login">
          <h3 class="text-center text-blue" >Login</h3>
          <input type='text' name="username" placeholder="Username" class="form-control">
          <input name="password" type='password' placeholder="Password" class='form-control'>
           <a class="btn btn-yellow mt-3" href="/signup">Register</a>
           <a class="btn btn-brightblue mt-3" href="/fb/login">Login with Facebook</a>
            <button class="btn btn-primary mt-3" type="submit">Login</button>
      </form>
  </div>
</div>
